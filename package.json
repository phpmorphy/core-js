{
  "name": "@umi-top/umi-core-js",
  "version": "1.0.0",
  "description": "UMI Core JS Library",
  "license": "MIT",
  "author": {
    "name": "UMI",
    "email": "dev@umi.top",
    "url": "https://umi.top"
  },
  "type": "commonjs",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "es2015": "esm/index.js",
  "types": "esm/index.d.ts",
  "unpkg": "iife/index.min.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "tsc --target es2015 --module commonjs --removeComments --outDir dist ./src/index.ts",
    "test": "nyc -r text -r html mocha",
    "posttest": "rm -rf dist",
    "cleanup": "rm -rf ./tmp ./dist ./esm ./cjs ./iife ./doc ./coverage ./.nyc_output",
    "build": "npm run cleanup; npm run build:concat; tsc; rollup -c; npm run build:types; npm run build:flow; npm run build:prepack",
    "lint": "eslint src/**/*.ts",
    "build:concat": "mkdir -p tmp; find ./src -type f -name '*.ts' -exec cat {} + > ./tmp/index.ts; sed -i -e '/^import/d' ./tmp/index.ts; sed -i -e '/^export {/d' ./tmp/index.ts; sed -i -e '/^\\/\\//d' ./tmp/index.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir esm; cp ./esm/index.d.ts ./cjs/index.d.ts",
    "build:flow": "flowgen --no-jsdoc --add-flow-header -o ./tmp/index.js.flow ./esm/index.d.ts; sed -i -e '/^  -/d' ./tmp/index.js.flow; cp ./tmp/index.js.flow ./esm/index.js.flow; cp ./tmp/index.js.flow ./cjs/index.js.flow",
    "build:prepack": "echo '{\"type\":\"module\",\"types\":\"index.d.ts\"}' > ./esm/package.json; echo '{\"type\":\"commonjs\",\"types\":\"index.d.ts\"}' > ./cjs/package.json",
    "jsdoc": "jsdoc --pedantic -d ./doc ./esm/index.js",
    "typedoc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/umi-top/umi-core-js"
  },
  "keywords": [
    "UMI",
    "umi.top"
  ],
  "bugs": {
    "url": "https://github.com/umi-top/umi-core-js/issues"
  },
  "homepage": "https://umi.top",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "flowgen": "^1.11.0",
    "jsdoc": "^3.6.4",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "rollup": "^2.16.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "esm",
    "cjs",
    "iife"
  ]
}
